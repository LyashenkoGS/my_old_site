
<web-app
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        id="Your_WebApp_ID"
        version="2.5">
    <display-name>Visual Java project</display-name>
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>com.servlet.IndexServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addTodo</servlet-name>
        <servlet-class>com.servlet.AddTodoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addTodo</servlet-name>
        <url-pattern>/addTodo</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>delTodo</servlet-name>
        <servlet-class>com.servlet.delTodo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delTodo</servlet-name>
        <url-pattern>/delTodo</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>

</web-app>
